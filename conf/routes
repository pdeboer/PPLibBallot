# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main Controller
GET        /                                        controllers.Application.index
GET        /showQuestion/:uuid                      controllers.Application.showQuestion(uuid: String)
GET        /showSecretQuestion/:uuid/:secret        controllers.Application.showQuestion(uuid: String, secret:String)
GET        /storeAnswer                             controllers.Application.storeAnswer
# Login
GET        /login                                   controllers.Login.login
GET        /logout                                  controllers.Login.logout

GET        /assetsBallot/:id/:secret                controllers.Application.showAsset(id: Long, secret:String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                            controllers.Assets.at(path="/public", file)

    